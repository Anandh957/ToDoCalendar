                        <i class="fa-solid fa-plus me-2"></i> Add New Task
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="todoModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add / Edit Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="todoForm">
                        <input type="hidden" id="TodoId" />
                        <div class="mb-3">
                            <label for="Title" class="form-label">Title</label>
                            <input id="Title" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <textarea id="Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="DueDate" class="form-label">Due Date</label>
                            <div class="datepicker-wrapper">
                                <input id="DueDate" type="text" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="IsDone">
                            <label class="form-check-label" for="IsDone">Completed</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="saveTodo">Save Task</button>
                </div>
            </div>
        </div>
    </div>

    @section scripts {

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-bottom-right",
            "timeOut": "2500"
        };
    </script>

    <script>
        // The JavaScript code remains exactly the same as in your original
        $(function(){
            // --- Helper Functions ---
            function formatDateForDb(d) {
                if (!d) return '';
                let date;
                if (typeof d === 'string') {
                    const parts = d.split('/');
                    if (parts.length === 3) {
                        date = new Date(parts[2], parts[1] - 1, parts[0]);
                    } else if (!isNaN(new Date(d))) {
                        date = new Date(d);
                    } else {
                        return '';
                    }
                } else if (d instanceof Date) {
                    date = d;
                } else {
                    return '';
                }

                let year = date.getFullYear();
                let month = (date.getMonth() + 1).toString().padStart(2, '0');
                let day = date.getDate().toString().padStart(2, '0');
                return `${year}-${month}-${day}`;
            }

            function formatDateForDisplay(d) {
                if (!d) return '';
                let date;
                if (typeof d === 'string') {
                    const parts = d.split('-');
                    if (parts.length === 3) {
                        date = new Date(parts[0], parts[1] - 1, parts[2]);
                    } else {
                        const displayParts = d.split('/');
                        if (displayParts.length === 3) {
                            return d;
                        }
                        date = new Date(d);
                    }
                } else if (d instanceof Date) {
                    date = d;
                } else {
                    return '';
                }

                if (isNaN(date.getTime())) return '';

                let day = date.getDate().toString().padStart(2, '0');
                let month = (date.getMonth() + 1).toString().padStart(2, '0');
                let year = date.getFullYear();
                return `${day}/${month}/${year}`;
            }

            const getTodayDateStringDbFormat = () => new Date().toISOString().substring(0, 10);

            // --- Calendar Variables ---
            let currentMonth = new Date().getMonth();
            let currentYear = new Date().getFullYear();
            let selectedCalendarDate = getTodayDateStringDbFormat();
            let allEvents = [];

            // --- DOM Elements ---
            const $currentMonthYear = $('#currentMonthYear');
            const $calendarGrid = $('#calendar-grid');
            const $taskDateInput = $('#taskDate');
            const $selectedDateLabel = $('#selectedDateLabel');
            const $dateTodos = $('#dateTodos');
            const $todoModal = $('#todoModal');
            const $todoForm = $('#todoForm');
            const $todoIdInput = $('#TodoId');
            const $title = $('#Title');
            const $description = $('#Description');
            const $dueDate = $('#DueDate');
            const $isDone = $('#IsDone');

            // --- Initialize Datepickers ---
            $taskDateInput.datepicker({
                dateFormat: 'dd/mm/yy',
                altFormat: 'yy-mm-dd',
                showOn: "button",
                buttonImage: "https://jqueryui.com/resources/demos/images/calendar.gif",
                buttonImageOnly: true,
                buttonText: "Select date",
                onSelect: function(dateText, inst) {
                    const selectedDateObj = new Date(inst.selectedYear, inst.selectedMonth, inst.selectedDay);
                    selectedCalendarDate = formatDateForDb(selectedDateObj);
                    currentMonth = selectedDateObj.getMonth();
                    currentYear = selectedDateObj.getFullYear();
                    fetchAndRenderCalendarEvents();
                }
            });

            $dueDate.datepicker({
                dateFormat: 'dd/mm/yy',
                altFormat: 'yy-mm-dd',
                showOn: "button",
                buttonImage: "https://jqueryui.com/resources/demos/images/calendar.gif",
                buttonImageOnly: true,
                buttonText: "Select date"
            });

            // --- Calendar Rendering ---
            function renderCalendar() {
                $calendarGrid.empty();
                $currentMonthYear.text(new Date(currentYear, currentMonth).toLocaleString('default', { month: 'long', year: 'numeric' }));

                const firstDayOfMonth = new Date(currentYear, currentMonth, 1);
                const lastDayOfMonth = new Date(currentYear, currentMonth + 1, 0);
                const daysInMonth = lastDayOfMonth.getDate();
                const startDay = firstDayOfMonth.getDay();

                const todayString = getTodayDateStringDbFormat();

                for (let i = 0; i < startDay; i++) {
                    $calendarGrid.append('<div class="calendar-day inactive empty-day"></div>');
                }

                for (let i = 1; i <= daysInMonth; i++) {
                    const date = new Date(currentYear, currentMonth, i);
                    const dateString = formatDateForDb(date);
                    const eventsForDay = Array.isArray(allEvents) ? allEvents.filter(event => formatDateForDb(event.start) === dateString) : [];
                    const hasEvent = eventsForDay.length > 0;

                    let dayClasses = 'calendar-day';
                    if (dateString === todayString) dayClasses += ' today';
                    if (dateString === selectedCalendarDate) dayClasses += ' selected';

                    const $dayDiv = $(`<div class="${dayClasses}" data-date="${dateString}">
                                        <span class="day-number">${i}</span>
                                        <div class="event-indicator"></div>
                                      </div>`);

                    if (hasEvent) {
                        eventsForDay.forEach(() => {
                            $dayDiv.find('.event-indicator').append('<span class="event-dot"></span>');
                        });
                    }
                    $calendarGrid.append($dayDiv);
                }

                updateSidebarForSelectedDate(selectedCalendarDate);
            }

            function fetchAndRenderCalendarEvents() {
                $.get('/Todo/GetEvents', function(res){
                    if (res && res.success === false) {
                        toastr.error(res.message || "Failed to load calendar events.");
                        allEvents = [];
                        renderCalendar();
                        return;
                    }
                    allEvents = res || [];
                    renderCalendar();
                }).fail(function(){
                    toastr.error("Failed to connect to server to load calendar events.");
                    allEvents = [];
                    renderCalendar();
                });
            }

            // --- Sidebar / Task List Functions ---
            function loadDate(dateDbFormat) {
                if (!dateDbFormat) {
                    $dateTodos.html('<p class="text-muted text-center mt-3">No date selected or invalid date.</p>');
                    return;
                }

                $.get('/Todo/GetByDate', { date: dateDbFormat }, function(res){
                    if (res && res.success === false) {
                        toastr.error(res.message || "Failed to load tasks for the selected date.");
                        $dateTodos.html('<p class="text-muted text-center mt-3">Error loading tasks.</p>');
                        return;
                    }

                    const items = res || [];

                    let html = '';
                    if (items.length === 0) {
                        html = '<p class="text-muted text-center mt-3">No tasks for this date</p>';
                    } else {
                        items.forEach(function(it){
                            const itemId = it.todoId;

                            const cls = it.isDone ? 'done' : '';
                            html += `<div class="d-flex justify-content-between align-items-start mb-2 todo-list-item ${cls}" data-id="${itemId || ''}">
                                        <div>
                                            <strong>${it.title || 'Unnamed Task'}</strong><br/>
                                            <small>${it.description || 'No description'}</small>
                                        </div>
                                        <div class="btn-group btn-group-sm ms-2" role="group">
                                            <button class="btn btn-outline-info editBtn" title="Edit" ${itemId === undefined || itemId === null ? 'disabled' : ''}><i class="fa-solid fa-pen"></i></button>
                                            <button class="btn btn-outline-danger delBtn" title="Delete" ${itemId === undefined || itemId === null ? 'disabled' : ''}><i class="fa-solid fa-trash"></i></button>
                                        </div>
                                    </div>`;
                        });
                    }
                    $dateTodos.html(html);
                }).fail(function(){
                    toastr.error("Failed to connect to server to load tasks for this date.");
                    $dateTodos.html('<p class="text-muted text-center mt-3">Failed to load tasks.</p>');
                });
            }

            function updateSidebarForSelectedDate(dateDbFormat) {
                const displayDate = formatDateForDisplay(dateDbFormat);
                $selectedDateLabel.text(displayDate);
                $taskDateInput.datepicker('setDate', new Date(dateDbFormat));
                loadDate(dateDbFormat);
            }

            // --- Event Handlers ---

            $('#prevMonth').click(function() {
                currentMonth--;
                if (currentMonth < 0) {
                    currentMonth = 11;
                    currentYear--;
                }
                fetchAndRenderCalendarEvents();
            });

            $('#nextMonth').click(function() {
                currentMonth++;
                if (currentMonth > 11) {
                    currentMonth = 0;
                    currentYear++;
                }
                fetchAndRenderCalendarEvents();
            });

            $calendarGrid.on('click', '.calendar-day:not(.inactive)', function() {
                $('.calendar-day').removeClass('selected');
                $(this).addClass('selected');
                selectedCalendarDate = $(this).data('date');
                updateSidebarForSelectedDate(selectedCalendarDate);
            });

            $('#addBtn').click(function(){
                $todoIdInput.val('');
                $title.val('');
                $description.val('');
                $dueDate.datepicker('setDate', new Date(selectedCalendarDate));
                $isDone.prop('checked', false);
                $('.modal-title').text('Add Task');
            });

            $dateTodos.on('click', '.editBtn', function(){
                const $item = $(this).closest('.todo-list-item');
                const id = $item.data('id');

                console.log('Editing task id:', id);

                if (!id) {
                    toastr.error('Task ID not found for editing.');
                    return;
                }

                $.get('/Todo/GetById', { id: id }, function(res){
                    console.log('Received task data for edit:', res);

                    if (!res || res.success === false) {
                        toastr.error(res?.message || 'Failed to load task details for editing.');
                        return;
                    }

                    $todoIdInput.val(res.todoId || '');
                    $title.val(res.title || '');
                    $description.val(res.description || '');
                    if (res.dueDate) {
                         $dueDate.datepicker('setDate', new Date(res.dueDate));
                    } else {
                        $dueDate.val('');
                    }
                    $isDone.prop('checked', res.isDone || false);

                    $('.modal-title').text('Edit Task');
                    $todoModal.modal('show');
                }).fail(function(xhr, status, error){
                    console.error('Error fetching task for edit:', error);
                    toastr.error('Failed to connect to server to load task details for editing.');
                });
            });

            $('#saveTodo').click(function(){
                const todoIdVal = $todoIdInput.val();
                const dueDateForDb = $dueDate.datepicker('option', 'altFormat') ?
                                     $.datepicker.formatDate($dueDate.datepicker('option', 'altFormat'), $dueDate.datepicker('getDate')) :
                                     formatDateForDb($dueDate.datepicker('getDate'));

                const dto = {
                    TodoId: todoIdVal ? parseInt(todoIdVal, 10) : 0,
                    Title: $title.val().trim(),
                    Description: $description.val().trim(),
                    DueDate: dueDateForDb,
                    IsDone: $isDone.is(':checked')
                };

                console.log('Saving task:', dto);

                if (!dto.Title) {
                    toastr.error("Task title cannot be empty.");
                    return;
                }
                if (!dto.DueDate || dto.DueDate === 'Invalid Date') {
                    toastr.error("Please select a due date.");
                    return;
                }

                $.post('/Todo/AddEdit', dto, function(res){
                    console.log('Save response:', res);

                    if(res.success){
                        $todoModal.modal('hide');
                        fetchAndRenderCalendarEvents();
                        loadDate(selectedCalendarDate);
                        toastr.success(res.message || 'Task saved successfully!');
                    } else {
                        toastr.error(res.message || 'An error occurred while saving the task.');
                    }
                }).fail(function(xhr, status, error){
                    console.error('Error saving task:', error);
                    toastr.error('Failed to connect to server to save task.');
                });
            });

            $dateTodos.on('click', '.delBtn', function(){
                const $item = $(this).closest('.todo-list-item');
                const id = $item.data('id');

                console.log('Deleting task id:', id);

                if (!id || isNaN(parseInt(id, 10))) {
                    Swal.fire('Error!', 'Invalid Task ID for deletion.', 'error');
                    return;
                }

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('/Todo/Delete', { id: id }, function(res){
                            console.log('Delete response:', res);

                            if(res.success){
                                fetchAndRenderCalendarEvents();
                                loadDate(selectedCalendarDate);
                                Swal.fire('Deleted!', 'Your task has been deleted.', 'success');
                            } else {
                                Swal.fire('Error!', res.message || 'Failed to delete the task.', 'error');
                            }
                        }).fail(function(xhr, status, error){
                            console.error('Error deleting task:', error);
                            Swal.fire('Error!', 'Failed to delete the task due to a server error.', 'error');
                        });
                    }
                });
            });

            // --- Initialization ---
            selectedCalendarDate = getTodayDateStringDbFormat();
            updateSidebarForSelectedDate(selectedCalendarDate);
            fetchAndRenderCalendarEvents();
        });
    </script>
 }